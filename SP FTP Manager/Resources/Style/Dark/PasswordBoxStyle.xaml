<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SP_FTP_Manager.Resources.Style.Dark"
                    xmlns:colors="clr-namespace:SP_FTP_Manager.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Style/Dark/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxStyle">
        <Setter Property="BorderBrush" Value="{x:Static colors:Colors.ControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0,0,200,30" RadiusX="2" RadiusY="2"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>