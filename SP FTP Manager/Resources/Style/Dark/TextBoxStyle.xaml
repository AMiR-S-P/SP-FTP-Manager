<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SP_FTP_Manager.Resources.Style.Dark"
                    xmlns:colors="clr-namespace:SP_FTP_Manager.Resources">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Style/Dark/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="BorderBrush" Value="{x:Static colors:Colors.ControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style TargetType="TextBox" x:Key="readOnlytextBoxStyle">
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{x:Static colors:Colors.MainAccentBrush}" />
        <Setter Property="BorderBrush" Value="{x:Static colors:Colors.MainAccentBrush}" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="IsReadOnlyCaretVisible" Value="False" />
        <Setter Property="Padding" Value="10,0,0,0" />
        <Setter Property="SelectionBrush" Value="{x:Static colors:Colors.MainForegroundBrush}" />
    </Style>
</ResourceDictionary>